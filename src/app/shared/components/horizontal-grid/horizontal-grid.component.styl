.container
  padding: 5px 0
  overflow-x: auto
  overflow-y: hidden
  scroll-behavior: smooth
  -webkit-overflow-scrolling: touch
  display: grid
  place-content: stretch
  place-items: center
  grid-gap: 8px
  grid-auto-flow: row
  grid-template-rows: minmax(auto, max-content)
  &::-webkit-scrollbar
    display: none !important
.underline
  width: 20%
  height 2px
  background-color: #f5f5f5
  &>.highlight
    width: 50%
    height: 2px
    background-color: #e02f29
