:host
  background-color: #ffffff
  position: relative
  padding-top: 2px
  padding-bottom: constant(safe-area-inset-bottom)
  padding-bottom: env(safe-area-inset-bottom)
  &:before
    content: ''
    display: block
    position: absolute
    width: 100%
    height: 1px
    background-color: #e7e7e7
    top: 0
    transform: scaleY(0.5)
app-grid-item
  [grid-item-image]
    width: 22px
    height: auto
  [grid-item-title]
    margin-top: 4px
    font-size: 12px
    transform: scale(0.833333)
  &.selected
    [grid-item-title]
      color: #e02e24
