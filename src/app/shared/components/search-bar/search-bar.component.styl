:host
  position: fixed
  z-index: 2
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: #ffffff
  // background-image: url('../../../../assets/design/searchbar.jpeg')
  // background-repeat: no-repeat
  // background-size: 100% auto
:host(.simple)
  position: relative
  .search-header__prefix,
  .search-header__suffix,
  .search-body
    display: none
    width: 0
    height 0
.search-header
  display: flex
  align-items: center
  position: relative
  width: 100%
  padding: 6px 0;
  font-size: 16px
  .search-header__prefix
    width: 36px
    box-sizing: border-box
    text-align: left
    padding-left: 8px
    color: #909399
    font-size: 18px
  .search-header__suffix
    width: 54px
    box-sizing: border-box
    text-align: right
  .search-header__inner
    flex: 1
    min-width: 0
    text-align: center
.search-button
  width: 100%
  font-size: 14px
  color: #e02e24
.search-bar
  display: flex
  align-items: stretch
  width: 100%
  height: 30px
  line-height: 30px
  background-color: #E4E7ED
  border-radius: 5px
  input[type='text']
    width: 100%
    background: none
    outline: none
    border: none
    font: inherit
    color: inherit
  .search-bar__inner
    flex: 1
    padding-left: 10px
  .search-bar__suffix
    width: 36px
    font-size: 19px
    color: #909399
